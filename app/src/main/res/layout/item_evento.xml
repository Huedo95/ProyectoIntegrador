<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp">


    <ImageView
        android:id="@+id/ImgEvento"
        android:layout_width="147dp"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_weight="1"
        app:srcCompat="@android:drawable/ic_menu_gallery" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvTituloEvento"
            android:layout_width="193dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:text="@string/tvvNombre1"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tvTextoEvento"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:text="@string/tvvDescripcion1"
            android:textSize="10sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnBorrarEvento"
            android:layout_width="44dp"
            android:layout_height="50dp"
            android:background="@android:drawable/ic_menu_delete" />

        <Button
            android:id="@+id/btnModificarEvento"
            android:layout_width="44dp"
            android:layout_height="50dp"
            android:background="@android:drawable/ic_menu_edit" />
    </LinearLayout>

</LinearLayout>